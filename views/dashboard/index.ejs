<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Space+Grotesk:wght@300;400;500;700&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        :root {
            --neon-blue: #00d4ff;
            --neon-pink: #ff0080;
            --neon-purple: #8b5cf6;
        }

        body {
            font-family: 'Space Grotesk', sans-serif;
            background: linear-gradient(135deg, #0f0f23 0%, #1a1a3e 50%, #2d1b69 100%);
            min-height: 100vh;
            color: white;
        }

        .orbitron {
            font-family: 'Orbitron', monospace;
        }

        .sidebar {
            background: linear-gradient(145deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%);
            backdrop-filter: blur(20px);
            border-right: 2px solid rgba(255,255,255,0.2);
        }

        .nav-link {
            transition: all 0.3s ease;
            border-radius: 10px;
            margin: 4px 0;
        }

        .nav-link:hover, .nav-link.active {
            background: linear-gradient(45deg, rgba(0, 212, 255, 0.2), rgba(139, 92, 246, 0.2));
            transform: translateX(5px);
        }

        .cyber-btn {
            background: linear-gradient(45deg, var(--neon-pink), var(--neon-purple));
            border: none;
            border-radius: 50px;
            padding: 8px 20px;
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
            cursor: pointer;
            font-size: 0.8rem;
        }

        .cyber-btn:hover {
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 8px 20px rgba(255, 0, 128, 0.4);
        }

        .main-content {
            background: rgba(255,255,255,0.02);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            border: 1px solid rgba(255,255,255,0.1);
        }
    </style>
</head>
<body>
    <div class="flex h-screen">
        <!-- Sidebar -->
        <div class="sidebar w-64 p-6 flex flex-col">
            <!-- Logo -->
            <div class="mb-8">
                <h1 class="text-2xl font-black orbitron">
                    PIXEL<span style="color: var(--neon-blue);">VAULT</span>
                </h1>
                <p class="text-xs text-gray-400 mt-1">Welcome, <%= user ? user.username || user.name : 'User' %></p>
            </div>

            <!-- Navigation -->
            <nav class="flex-1">
                <ul class="space-y-2">
                    <li>
                        <a href="/dashboard" class="nav-link active flex items-center px-4 py-3 text-gray-300 hover:text-white">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6a2 2 0 01-2 2H10a2 2 0 01-2-2V5z"></path>
                            </svg>
                            Dashboard
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/upload" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:text-white">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                            </svg>
                            Upload
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/gallery" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:text-white">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                            </svg>
                            Gallery
                        </a>
                    </li>
                    <li>
                        <a href="/dashboard/categories" class="nav-link flex items-center px-4 py-3 text-gray-300 hover:text-white">
                            <svg class="w-5 h-5 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                            </svg>
                            Categories
                        </a>
                    </li>
                </ul>
            </nav>

            <!-- Logout -->
            <div class="mt-6">
                <a href="/logout" class="cyber-btn w-full block text-center">
                    Logout
                </a>
            </div>
        </div>

        <!-- Main Content -->
        <div class="flex-1 p-6">
            <div class="main-content h-full p-6 overflow-auto">
                <div class="space-y-6">
                    <!-- Header -->
                    <div class="flex justify-between items-center">
                        <div>
                            <h1 class="text-3xl font-bold orbitron">Dashboard</h1>
                            <p class="text-gray-400 mt-1">Welcome back to your image vault</p>
                        </div>
                        <div class="text-right">
                            <p class="text-sm text-gray-400">Last updated</p>
                            <p class="text-sm text-white font-medium" id="last-updated"></p>
                        </div>
                    </div>

                    <!-- Stats Cards -->
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                        <!-- Total Images -->
                        <div class="bg-gradient-to-br from-blue-500/20 to-purple-600/20 backdrop-filter backdrop-blur-lg border border-white/20 rounded-xl p-6">
                            <div class="flex items-center">
                                <div class="p-3 bg-blue-500/30 rounded-lg">
                                    <svg class="w-8 h-8 text-blue-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <p class="text-sm font-medium text-gray-300">Total Images</p>
                                    <p class="text-3xl font-bold text-white"><%= (stats && stats.totalImages) ? stats.totalImages : 0 %></p>
                                </div>
                            </div>
                        </div>

                        <!-- Total Categories -->
                        <div class="bg-gradient-to-br from-pink-500/20 to-red-600/20 backdrop-filter backdrop-blur-lg border border-white/20 rounded-xl p-6">
                            <div class="flex items-center">
                                <div class="p-3 bg-pink-500/30 rounded-lg">
                                    <svg class="w-8 h-8 text-pink-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <p class="text-sm font-medium text-gray-300">Categories</p>
                                    <p class="text-3xl font-bold text-white"><%= (stats && stats.totalCategories) ? stats.totalCategories : 0 %></p>
                                </div>
                            </div>
                        </div>

                        <!-- Storage Used (placeholder) -->
                        <div class="bg-gradient-to-br from-green-500/20 to-teal-600/20 backdrop-filter backdrop-blur-lg border border-white/20 rounded-xl p-6">
                            <div class="flex items-center">
                                <div class="p-3 bg-green-500/30 rounded-lg">
                                    <svg class="w-8 h-8 text-green-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 12l2 2 4-4"></path>
                                    </svg>
                                </div>
                                <div class="ml-4">
                                    <p class="text-sm font-medium text-gray-300">Status</p>
                                    <p class="text-xl font-bold text-green-300">Online</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Categories Overview -->
                    <div class="bg-white/5 backdrop-filter backdrop-blur-lg border border-white/20 rounded-xl p-6">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-xl font-bold text-white">Categories</h2>
                            <a href="/dashboard/categories" class="text-blue-400 hover:text-blue-300 text-sm">View All →</a>
                        </div>
                        
                        <% if (categories && categories.length > 0) { %>
                            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
                                <% categories.forEach(category => { %>
                                    <div class="bg-white/5 rounded-lg p-4 border border-white/10 hover:bg-white/10 transition-all">
                                        <h3 class="font-semibold text-white"><%= category.name %></h3>
                                        <p class="text-sm text-gray-400 mt-1"><%= category.description || 'No description' %></p>
                                        <p class="text-xs text-gray-500 mt-2">Created <%= new Date(category.createdAt).toLocaleDateString() %></p>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-8">
                                <svg class="w-16 h-16 text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                </svg>
                                <p class="text-gray-400">No categories created yet</p>
                                <a href="/dashboard/categories" class="inline-block mt-2 px-4 py-2 bg-blue-500/20 text-blue-300 rounded-lg hover:bg-blue-500/30 transition-all">
                                    Create Your First Category
                                </a>
                            </div>
                        <% } %>
                    </div>

                    <!-- Recent Images -->
                    <div class="bg-white/5 backdrop-filter backdrop-blur-lg border border-white/20 rounded-xl p-6">
                        <div class="flex justify-between items-center mb-6">
                            <h2 class="text-xl font-bold text-white">Recent Images</h2>
                            <a href="/dashboard/gallery" class="text-blue-400 hover:text-blue-300 text-sm">View Gallery →</a>
                        </div>
                        
                        <% if (recentImages && recentImages.length > 0) { %>
                            <div class="grid grid-cols-2 sm:grid-cols-3 lg:grid-cols-4 xl:grid-cols-6 gap-4">
                                <% recentImages.forEach(image => { %>
                                    <div class="group relative">
                                        <div class="aspect-square bg-white/5 rounded-lg overflow-hidden border border-white/10 hover:border-white/30 transition-all">
                                            <img src="<%= image.filePath %>" alt="<%= image.alt || image.originalName %>" 
                                                 class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300">
                                            <div class="absolute inset-0 bg-black/50 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                                                <button onclick="copyToClipboard(window.location.origin + '<%= image.filePath %>')" 
                                                        class="p-2 bg-white/20 rounded-full hover:bg-white/30 transition-all">
                                                    <svg class="w-4 h-4 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                                                    </svg>
                                                </button>
                                            </div>
                                        </div>
                                        <div class="mt-2">
                                            <p class="text-xs text-gray-400 truncate"><%= image.originalName %></p>
                                            <p class="text-xs text-gray-500"><%= (image.category && image.category.name) ? image.category.name : 'Unknown' %></p>
                                        </div>
                                    </div>
                                <% }); %>
                            </div>
                        <% } else { %>
                            <div class="text-center py-12">
                                <svg class="w-16 h-16 text-gray-500 mx-auto mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <p class="text-gray-400 mb-4">No images uploaded yet</p>
                                <a href="/dashboard/upload" class="inline-block px-6 py-2 bg-gradient-to-r from-pink-500 to-purple-600 text-white rounded-lg hover:from-pink-600 hover:to-purple-700 transition-all">
                                    Upload Your First Image
                                </a>
                            </div>
                        <% } %>
                    </div>

                    <!-- Quick Actions -->
                    <div class="bg-white/5 backdrop-filter backdrop-blur-lg border border-white/20 rounded-xl p-6">
                        <h2 class="text-xl font-bold text-white mb-6">Quick Actions</h2>
                        
                        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
                            <a href="/dashboard/upload" class="flex items-center p-4 bg-gradient-to-br from-blue-500/20 to-purple-600/20 rounded-lg hover:from-blue-500/30 hover:to-purple-600/30 transition-all">
                                <svg class="w-8 h-8 text-blue-300 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                                </svg>
                                <div>
                                    <p class="font-semibold text-white">Upload</p>
                                    <p class="text-xs text-gray-400">Add new images</p>
                                </div>
                            </a>

                            <a href="/dashboard/categories" class="flex items-center p-4 bg-gradient-to-br from-pink-500/20 to-red-600/20 rounded-lg hover:from-pink-500/30 hover:to-red-600/30 transition-all">
                                <svg class="w-8 h-8 text-pink-300 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                                </svg>
                                <div>
                                    <p class="font-semibold text-white">Categories</p>
                                    <p class="text-xs text-gray-400">Organize images</p>
                                </div>
                            </a>

                            <a href="/dashboard/gallery" class="flex items-center p-4 bg-gradient-to-br from-green-500/20 to-teal-600/20 rounded-lg hover:from-green-500/30 hover:to-teal-600/30 transition-all">
                                <svg class="w-8 h-8 text-green-300 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                </svg>
                                <div>
                                    <p class="font-semibold text-white">Gallery</p>
                                    <p class="text-xs text-gray-400">Browse all images</p>
                                </div>
                            </a>

                            <div class="flex items-center p-4 bg-gradient-to-br from-yellow-500/20 to-orange-600/20 rounded-lg">
                                <svg class="w-8 h-8 text-yellow-300 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                </svg>
                                <div>
                                    <p class="font-semibold text-white">Help</p>
                                    <p class="text-xs text-gray-400">Documentation</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Update the last updated time
        document.addEventListener('DOMContentLoaded', function() {
            const lastUpdated = document.getElementById('last-updated');
            if (lastUpdated) {
                lastUpdated.textContent = new Date().toLocaleString();
            }
        });

        // Global utility functions
        function copyToClipboard(text) {
            if (navigator.clipboard && navigator.clipboard.writeText) {
                navigator.clipboard.writeText(text).then(() => {
                    alert('URL copied to clipboard!');
                }).catch(err => {
                    console.error('Clipboard API failed:', err);
                    fallbackCopy(text);
                });
            } else {
                fallbackCopy(text);
            }
        }

        function fallbackCopy(text) {
            const textArea = document.createElement('textarea');
            textArea.value = text;
            textArea.style.position = 'fixed';
            textArea.style.left = '-999999px';
            textArea.style.top = '-999999px';
            document.body.appendChild(textArea);
            textArea.focus();
            textArea.select();
            
            try {
                const successful = document.execCommand('copy');
                if (successful) {
                    alert('URL copied to clipboard!');
                } else {
                    alert('Failed to copy URL');
                }
            } catch (err) {
                alert('Failed to copy URL');
            }
            
            document.body.removeChild(textArea);
        }
    </script>
</body>
</html>